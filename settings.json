{
    "editor.tabCompletion": false,
    "editor.renderControlCharacters": true,
    "[cpp]": {
        "editor.quickSuggestions": false
    },
    "[c]": {
        "editor.quickSuggestions": false
    },

    //jjでノーマルモードに入る
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        }
    ],
    
    //スペースをリーダーに設定
    "vim.leader": "<space>",

    //クリップボード共有したら重くなったのでコメントアウト
    //"vim.useSystemClipboard": true,

    //ノーマルモードでのキーバインド
    //20180711追記 : バージョンによっては
    //"vim.normalModeKeyBindings": [
    "vim.otherModesKeyBindings": [
        //space + w : 保存
        {
            "before": ["leader","w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },

        //space + q : アクティブなエディタを閉じる
        {
            "before": ["leader","q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },

        //space + s : エディタを左右に分割
        {
            "before": ["leader","s"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.splitEditor",
                    "args": []
                }
            ]
        },

        //space + h : 行頭に移動
        {
            "before": ["leader","h"],
            "after": ["^"]
        },

        //space + l : 行末に移動
        {
            "before": ["leader","l"],
            "after": ["$"]
        },

        //space + t : 右のタブに移動
        {
            "before": ["leader","t"],
            "after": ["g","t"]
        },

        //space + T : 左のタブに移動
        {
            "before": ["leader","T"],
            "after": ["g","T"]
        },

        //space + tab : 分割したウィンドウを右方向に移動
        {
            "before": ["leader","<tab>"],
            "after": ["<C-w>","w"]
        }
    ],
    "workbench.colorTheme": "Monokai Dimmed"
}